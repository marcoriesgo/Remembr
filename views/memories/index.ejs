<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <title>Remembr</title>
</head>
<body>
    <% if(currentUser) { %>
    <div class="col-xs-1" align="center">
        <div class="heading">
            <%- include('../partials/title.ejs') %>
            <div class="homeButton"><a type="button" class="btn btn-warning btn-lg" href="/logout">Log Out</a></div>
        </div>
        <div class="container-fluid">
            <div class="quoteContainer">
                <h2>Daily Inspiration</h2>
                <button type="button" class="btn btn-warning btn-lg" id="generateQuote">Get A New Quote</button>
                <div><p id="quote"></p></div>
                <div><p id="author"></p></div>
                <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
                <script  src="js/quotes.js"></script>
            </div>
            <div class="categories">
                <h2>Categories</h2>
                <h3>What are you looking for today?</h3>
            </div>
            <div class="linkToPage">
                <a href="/memories/people"><img class="linkImage" src="images/contacts.jpeg" alt="people" style="width: 100%; height: 100%;" ></a>
                <div class="imageLinkText">
                    <h3>Network</h3>
                </div>
            </div>
            <div class="linkToPage">
                <a href="/memories/places"><img class="linkImage" src="https://images.pexels.com/photos/2193600/pexels-photo-2193600.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260" alt="places" style="width: 100%; height: 100%;"></a>
                <div class="imageLinkText">
                    <h3>Places</h3>
                </div>
            </div>
            <div class="linkToPage">
                <a href="/memories/occassions"><img class="linkImage" src="images/gathering.jpeg" alt="occassions" style="width: 100%; height: 100%;"></a>
                <div class="imageLinkText">
                    <h3>Events</h3>
                </div>
            </div>
        </div>    
    </div>
    <%- include('../partials/footer.ejs') %>
    <% } else { %>
        <%- include('../partials/newsession.ejs') %>
    <% } %>
</body>
</html>