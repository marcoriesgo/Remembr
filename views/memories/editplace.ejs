<!DOCTYPE html>
<html>
<head>
  <%- include('../partials/head.ejs') %>
  <title>Edit Person</title>
</head>
<body>
    <% if(currentUser) { %>
    <div class="col-xs-1" align="center">
        <div class="heading">
            <%- include('../partials/title.ejs') %>
            <div class="backButton"><a type="button" class="btn btn-warning btn-lg" href="/memories/places">Back to Places</a></div>
        </div>
    <div class="container">
        <h3 class="instructions">Edit Place</h3>
        <div class="bodySpaceToUse">
            <form class="editForm" action="/memories/places/<%=places.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="placeName">Place Name:</label>
                    <input type="text" class="form-control" name="placeName" value="<%=places.placeName%>">
                </div>
                <div class="form-group">
                    <label for="placeLocation">Location:</label>
                    <input type="text" class="form-control" name="placeLocation" value="<%=places.placeLocation%>">
                </div>
                <div class="form-group">
                    <label for="placeActivity">Activity:</label>
                    <input type="text" class="form-control" name="placeActivity" value="<%=places.placeActivity%>">
                </div>
                <div class="form-group">
                    <label for="greatFor">The best thing about this place is:</label>
                    <input type="text" class="form-control" name="greatFor" value="<%=places.greatFor%>">
                </div>
                <div class="form-group">
                    <label for="placeActivity">Notes:</label>
                    <input type="text" class="form-control" name="placeNotes" value="<%=places.placeNotes%>">
                </div>
                <div class="form-group">
                    <label for="placeImg">Image:</label>
                    <input type="text" class="form-control" name="placeImg" value="<%=places.placeImg%>">
                </div>
                <input class="btn btn-success btn-lg" id="submitEdit" type="submit" name="" value="Submit Changes">
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
  <% } else { %>
    <%- include('../partials/newsession.ejs') %>
  <% } %>
</body>
</html>