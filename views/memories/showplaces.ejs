<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <title>People</title>
</head>
<body>
    <% if(currentUser) { %>
    <div class="col-xs-1" align="center">
        <div class="heading">
            <%- include('../partials/title.ejs') %>
            <div class="backButton"><a type="button" class="btn btn-warning btn-lg" href="/memories/places">Return to Places</a></div>
        </div>
        <div class="placeContainer">
                <div class="placeSelected">
                    <h4 class="category">Place Name:</h4>
                    <p class="description"><%=places.placeName %></p>
                    <h4 class="category">Location:</h4>
                    <p class="description"><%=places.placeLocation %></p>
                    <h4 class="category">Activity:</h4>
                    <p class="description"><%=places.placeActivity %></p>
                    <h4 class="category">Notes:</h4>
                    <p class="description"><%=places.placeNotes %></p>
                    <img class="itemImage"src="<%= places.placeImg %>" alt="<%= places.personName %>" class="img-fluid">
                    <div class="edit"><a type="button" class="btn btn-primary btn-lg btn-block" href="/memories/places/<%=places.id%>/edit">Edit</a></div>             
                    <form class="delete" action="/memories/places/<%=places.id%>?_method=DELETE" method="POST">
                        <div class="deleteButton"><input type="submit" type="button" class="btn btn-danger btn-lg btn-block" value="Delete"></div>
                    </form>             
                </div>
            </div>  
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
    <% } else { %>
        <%- include('../partials/newsession.ejs') %>
    <% } %>
</body>
</html>