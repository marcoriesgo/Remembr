<!DOCTYPE html>
<html>
<head>
  <%- include('../partials/head.ejs') %>
  <title>Edit Person</title>
</head>
<body>
    <% if(currentUser) { %>
    <div class="col-xs-1" align="center">
        <div class="heading">
            <%- include('../partials/title.ejs') %>
            <div class="backButton"><a type="button" class="btn btn-warning btn-lg" href="/memories/occassions">Back to Occassions</a></div>
        </div>
    <div class="container">
        <h3 class="instructions">Edit Event</h3>
        <div class="bodySpaceToUse">
            <form class="editForm" action="/memories/occassions/<%=occassions.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="occassionName">Occassion Name:</label>
                    <input type="text" class="form-control" name="occassionName" value="<%=occassions.occassionName%>">
                </div>
                <div class="form-group">
                    <label for="occassionDate">Date:</label>
                    <input type="text" class="form-control" name="occassionDate" value="<%=occassions.occassionDate%>">
                </div>
                <div class="form-group">
                    <label for="occassionImportance">Location:</label>
                    <input type="text" class="form-control" name="occassionPlace" placeholder="<%=occassions.occassionPlace%>">
                </div>
                <div class="form-group">
                    <label for="occassionNotes">Notes:</label>
                    <input type="text" class="form-control" name="occassionNotes" value="<%=occassions.occassionNotes%>">
                </div>
                <input class="btn btn-success btn-lg" id="submitEdit" type="submit" name="" value="Add Occassion Changes">
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
  <% } else { %>
    <%- include('../partials/newsession.ejs') %>
  <% } %>
</body>
</html>