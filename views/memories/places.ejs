<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <title>Places</title>
</head>
<body>
    <% if(currentUser) { %>
    <div class="col-xs-1" align="center">
        <div class="heading">
            <%- include('../partials/title.ejs') %>
            <div class="homeButton"><a type="button" class="btn btn-warning btn-lg" href="/remembr">Return to Home Page</a></div>
        </div>
        <div class="container-flex">
            <h2>Community Places</h2>
            <div class="newItemButton"><a type="button" class="btn btn-warning btn-lg btn-block" href="/memories/places/new">Share A New Place</a></div>
            <div class="container-flex">
                <% places.forEach(function(places) { %>
                    <div class="placesItem">
                            <div class="placeName"><a href="/memories/places/<%=places.id%>"><%= places.placeName %> </a></div>
                            <div class="placeImage"><a href="/memories/places/<%=places.id%>"><img src="<%= places.placeImg %>" alt="<%= places.placeName %>" class="img-fluid"></a></div>
                            <div class="placeActivity"><%=places.placeActivity %></div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
    <% } else { %>
        <%- include('../partials/newsession.ejs') %>
    <% } %>
</body>
</html>